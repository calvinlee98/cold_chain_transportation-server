<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.server.dao.UserDao">

    <!--create a new user-->
    <insert id="createNewUser" parameterType="User" keyProperty="user_id" useGeneratedKeys="true">
        insert into Default_.users (phone_number, password, car_id)
        values (#{phoneNumber}, #{password}, #{carId})
    </insert>

    <!--find user password-->
    <select id="getUserPassword" parameterType="String" resultType="String">
        select password
        from Default_.users
        where phone_number = #{phoneNumber}
    </select>
    



</mapper>